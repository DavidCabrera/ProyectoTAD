<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/wechat?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="com/mycompany/wechat/modelo/Conversacion.hbm.xml"/>
    <mapping resource="com/mycompany/wechat/modelo/Mensaje.hbm.xml"/>
    <mapping resource="com/mycompany/wechat/modelo/UsuarioTieneConversacion.hbm.xml"/>
    <mapping resource="com/mycompany/wechat/modelo/Usuario.hbm.xml"/>
    <mapping resource="com/mycompany/wechat/modelo/Archivo.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
